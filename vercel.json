{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/KashFlowPos",
  "framework": "angular",
  "functions": {
    "api/functions/api/index.ts": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 10,
      "includeFiles": "{api/src/**,api/node_modules/**,api/package.json,api/tsconfig.json}"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/functions/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
