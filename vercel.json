{
  "version": 2,
  "buildCommand": "npm run build:all",
  "outputDirectory": "dist",
  "projects": {
    "frontend": {
      "rootDirectory": "frontend",
      "buildCommand": "npm run build",
      "outputDirectory": "dist"
    },
    "api": {
      "rootDirectory": "api",
      "buildCommand": "npm run build",
      "functions": {
        "api/**/*.ts": {
          "memory": 1024,
          "maxDuration": 60
        }
      }
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
