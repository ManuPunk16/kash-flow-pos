{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./", // CAMBIO IMPORTANTE: rootDir en la ra√≠z de api
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/tipos"] // CAMBIO IMPORTANTE
  },
  "include": ["src/**/*", "functions/**/*"], // Incluir ambas carpetas
  "exclude": ["node_modules", "dist"]
}
